<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background_color"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_article_reading"
        tools:context=".ArticleReadingActivity">
   <android.support.v7.widget.AppCompatTextView
           android:layout_width="wrap_content"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="10dp"
           android:fontFamily="serif"
           android:textStyle="bold"
           android:id="@+id/title_input"
           android:textColor="?attr/primary_text_color"
           android:textSize="20sp"
           android:layout_height="wrap_content"/>
    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_input"
            android:layout_marginTop="5dp"
            android:id="@+id/second_input"
            android:textSize="16sp"
            android:textColor="?attr/secondary_text_color"
            android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/second_input"
            android:layout_marginTop="5dp"
            android:id="@+id/date_input"
            android:textColor="?attr/secondary_text_color"
            android:layout_height="wrap_content"/>
    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_input"
            android:layout_marginTop="5dp"
            android:id="@+id/writer_input"
            android:textColor="?attr/secondary_text_color"
            android:layout_height="wrap_content"/>

  <android.support.v7.widget.AppCompatImageView
          android:layout_width="match_parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/writer_input"
          android:layout_margin="5dp"
          android:id="@+id/article_image"
          android:layout_height="wrap_content"/>
    <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/article_image"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:id="@+id/article_text"
            android:textColor="?attr/primary_text_color"
            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>